<pyvcp>
<tabs>
    <names>["EDM", "MACHINE", "PID", "TEMP"]</names>
    <vbox>
        <dial>
            <size>200</size>
            <cpr>150</cpr>
            <min_>0</min_>
            <max_>150</max_>
            <text>"Set Vgap"</text>
            <initval>50</initval>
            <resolution>1</resolution>
            <halpin>"setvgap"</halpin>
            <dialcolor>"yellow"</dialcolor>
            <edgecolor>"green"</edgecolor>
            <dotcolor>"black"</dotcolor>
            <param_pin>1</param_pin>
        </dial>
        <label>
            <text>"Vgap:"</text>
            <font>("Helvetica",20)</font>
        </label>
        <number>
            <halpin>"vgap"</halpin>
            <font>("Helvetica",20)</font>
            <format>"3.1f"</format>
        </number>
    </vbox>
    
    <vbox>
        <label>
            <text>"Spindle speed:"</text>
        </label>
        <bar>
            <halpin>"spindle-speed"</halpin>
            <max_>20000</max_>
        </bar>
        <scale>
            <font>("Helvetica",16)</font>
            <width>"25"</width>
            <halpin>"scale"</halpin>
            <resolution>0.1</resolution>
            <orient>HORIZONTAL</orient>
            <initval>1</initval>
            <min_>-1</min_>
            <max_>1</max_>
            <param_pin>1</param_pin>
        </scale>
    </vbox>
    
    <vbox>
        <label>
            <text>"PID parameters for adaptive feed"</text>
        </label>
    </vbox>
    
    <vbox>
        <label>
            <text>"Temperature:"</text>
        </label>
        <number>
            <halpin>"voltage"</halpin>
            <font>("Helvetica",20)</font>
            <format>".2f"</format>
        </number>
    </vbox>
</tabs>
</pyvcp>
